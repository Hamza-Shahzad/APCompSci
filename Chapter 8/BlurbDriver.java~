public class BlurbDriver{
  
  public static void main(String[] args){
    
    Blurb saying = new Blurb();
    
    for(int i = 0; i < 3; i++){
      System.out.println("Alien 1: " + saying.generateWord());
      System.out.println("Alien 2: " + saying.generateWord());
    }
    
  }
}
    