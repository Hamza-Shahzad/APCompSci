public class PascalTriangle {

   public static void print(int numRows) {
       for (int i = 0; i < numRows; i++) {
           for (int j = 0; j <= i; j++) {
             
               System.out.print(pascal(i, j) + " ");
           }
           System.out.println();
       }
   }

   public static int pascal(int row, int col) {
       if (col == 0) {
           return 1;
       } else if (col == row) {
           return 1;
       } else {
           return pascal(row - 1, col - 1) + pascal(row - 1, col);
       }

   }